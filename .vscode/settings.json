{
  // workbench & editor style
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "monokai-charcoal",
  "workbench.sideBar.location": "right",
  "workbench.editor.tabCloseButton": "left",
  // "workbench.editor.highlightModifiedTabs": true,
  "editor.fontFamily": "'Fira Code','Input Mono'",
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.lineNumbers": "interval",
  "editor.cursorSmoothCaretAnimation": true,

  // errorLens
  "errorLens.enabledDiagnosticLevels": ["error", "warning"], // "info", "hint"
  "errorLens.excludeBySource": ["cSpell"], // "eslint", "stylelint"

  //lint
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],
  "stylelint.validate": ["css", "less", "sass", "scss", "postcss"],
  "explorer.confirmDelete": false
}
